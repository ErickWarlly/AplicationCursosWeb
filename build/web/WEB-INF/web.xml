<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletInicial</servlet-name>
        <servlet-class>br.com.controllers.ServletInicial</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCadastro</servlet-name>
        <servlet-class>br.com.controllers.ServletCadastro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletTelaCadastro</servlet-name>
        <servlet-class>br.com.controllers.ServletTelaCadastro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletTelaAlterar</servlet-name>
        <servlet-class>br.com.controllers.ServletTelaAlterar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUpdate</servlet-name>
        <servlet-class>br.com.controllers.ServletUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletTelaDeletar</servlet-name>
        <servlet-class>br.com.controllers.ServletTelaDeletar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDelete</servlet-name>
        <servlet-class>br.com.controllers.ServletDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletFiltro</servlet-name>
        <servlet-class>br.com.controllers.ServletFiltro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletInicial</servlet-name>
        <url-pattern>/inicio.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCadastro</servlet-name>
        <url-pattern>/cadastro.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletTelaCadastro</servlet-name>
        <url-pattern>/cadastrardisci.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletTelaAlterar</servlet-name>
        <url-pattern>/alterardisci.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUpdate</servlet-name>
        <url-pattern>/update.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletTelaDeletar</servlet-name>
        <url-pattern>/deletardisci.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDelete</servlet-name>
        <url-pattern>/deletar.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletFiltro</servlet-name>
        <url-pattern>/filtro.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
